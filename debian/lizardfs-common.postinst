#!/bin/sh

set -e

case "${1}" in
	configure)
		if ! getent passwd lfs > /dev/null 2>&1
		then
			adduser --quiet --system --group --no-create-home --home /var/lib/lfs lfs
		fi
		;;

	abort-upgrade|abort-remove|abort-deconfigure)

		;;

	*)
		echo "postinst called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
