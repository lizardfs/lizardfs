#!/bin/bash
set -ue
cd "$(dirname "$0")"
mkdir -p build-pack
cd build-pack
rm -f CMakeCache.txt
cmake .. -DCMAKE_BUILD_TYPE=Release -DENABLE_TESTS=NO -DCMAKE_INSTALL_PREFIX=/ -DENABLE_DEBIAN_PATHS=YES
cat >../Makefile <<'END'
all clean install:
	$(MAKE) --no-print-directory -C build-pack $@

distclean:
	rm -rf build-pack
	rm -rf external/gtest*
	rm -f Makefile
END
